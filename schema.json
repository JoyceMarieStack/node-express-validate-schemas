{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "headline": { "type": "string" },
          "author": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" }
            },
            "required": ["name"]
          },
          "datePublished": { "type": "string", "format": "date-time" },
          "articleBody": { "type": "string" },
          "image": { "type": "string" },
          "publisher": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "logo": { "type": "string" }
            },
            "required": ["name"]
          }
        },
        "required": [
          "id",
          "name",
          "headline",
          "author",
          "datePublished",
          "articleBody"
        ]
      }
    },
    "pagination": {
      "type": "object",
      "properties": {
        "current_page": { "type": "integer" },
        "per_page": { "type": "integer" },
        "total": { "type": "integer" },
        "last_page": { "type": "integer" }
      },
      "required": ["current_page", "per_page", "total", "last_page"]
    }
  },
  "required": ["data", "pagination"]
}
